{
    "name": "eihmels/twitch-helix-streams",
    "description": "implements the Twitch Api \"GET https://api.twitch.tv/helix/streams\"",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TwitchHelixStreams\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "rector/rector": "^0.15.11",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.8",
        "phpstan/phpstan": "^1.9"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
